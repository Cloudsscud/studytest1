//2024/03/07

#include<stdio.h>
//求n的阶乘
int main()
{
	int i = 0, n = 0, ret = 1;
	printf("请输入阶乘的数量:>");
	scanf("%d", &n);
	for (i = 1; i <= n; i++)
	{
		ret = ret * i;
	}
	printf("%d\n", ret);
	return 0;
}

//求前n个阶乘的和
int main()
{
	int i = 0, n = 0, ret = 1, num = 0;
	printf("请输入阶乘的数量:>");
	scanf("%d", &n);
	for (i = 1; i <= n; i++)
	{
		ret = ret * i;
		num += ret;
	}
	printf("%d\n", num);
	return 0;
}
